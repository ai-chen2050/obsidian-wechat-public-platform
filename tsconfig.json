{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
    	"esModuleInterop": true,
		"importHelpers": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7","esnext", "dom", "dom.iterable", "scripthost", "es2017"],
	},
	"include": ["**/*.ts", "src/style/basicStyle.ts"]
}
